@inherits ChatUserPrivateBase

@if (MessagesUser.Estado)
{
    <div class="row mx-0 px-0 rounded border" style="max-width:300px;">
        <div class="col-12 px-0" style="height: 270px;">
            <div class="col-12 mx-0 px-2 py-2 d-flex justify-content-sm-between bg-info text-white font-weight-bold rounded-top">
                <div>@UserMessage.User.Name</div>
                <button type="button" style="position:absolute; right:2px; top:1px" class="close" @onclick="(() => MessagesUser.Estado = false)">
                    <span class="text-danger">×</span>
                </button>
            </div>
            <div class="col-12 mx-0">
                @foreach (var message in MessagesUser.ListMessages)
                {
                    <div class="col-12 px-0 mx-0">@message</div>
                }
            </div>
        </div>

        <div class="col-12 px-2 d-flex justify-content-end">
            <input type="text" placeholder="Mensaje" class="form-control" @bind="UserMessage.Message" />
            <button class="btn btn-sm btn-primary" @onclick="(()=>SendMessagePrivate.InvokeAsync(UserMessage))">Enviar</button>
        </div>
    </div>
}


