@inherits ChatUserPrivateBase

<div class="row mx-0 px-0 rounded border" style="max-width:300px;">
    <div class="col-12 mx-0 px-0 py-2 d-flex justify-content-center bg-info text-white font-weight-bold rounded-top">
        @UserMessage.User.Name
    </div>
    <div class="col-12 mx-0 px-2">
            @foreach (var message in MessagesUser.ListMessages)
            {
               <div class="col-12 px-0 mx-0">@message</div>
            }
    </div>
    <div class="col-12 px-2">
        <input type="text" placeholder="Mensaje" @bind="UserMessage.Message"/>
        <button class="btn btn-sm btn-primary" @onclick="(()=>SendMessagePrivate.InvokeAsync(UserMessage))">Enviar</button>
    </div>
</div>

