@page "/"
@inherits IndexBase

<div class="row">
    <div class="col-md-4 border rounded row py-3">
        <h2 class="my-3">Chat Application 1.0.2</h2>

        <div class="form-group col-12">
            <label>Usuario</label>
            <input type="text" class="form-control" @bind="userInput" />
        </div>

        <div class="form-group col-12">
            <label>Mensaje</label>
            <input type="text" class="form-control" @bind="messageInput" />
        </div>
        <div class="form-group col-12">
            <label>Enviar mensaje</label>
            <input type="text" class="form-control" @bind="idU" />
        </div>
        <div class="col-12 d-flex justify-content-around">
            <button class="btn btn-primary" @onclick="Send" disabled="@(!IsConnected)">Send</button>
            <button class="btn btn-warning" @onclick="Send2">Private Send</button>
        </div>
    </div>

    <hr />
    
 
    <ul id="messageList">
        @foreach (var _message in messages)
        {
            <li>@_message</li>
        }
    </ul>


    <ul id="messageLista">
        @foreach (var usuarios in ListUsuario)
        {
            <li>@usuarios</li>
        }
    </ul>
</div>
